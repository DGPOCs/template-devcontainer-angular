{
  "name": "Angular DevContainer",
  "runArgs": ["--name", "Angular-devcontainer-template"],
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
  "postCreateCommand": "npm install",
  "forwardPorts": [4200],
  "customizations": {
    "vscode": {
      "extensions": [
        "angular.ng-template",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
