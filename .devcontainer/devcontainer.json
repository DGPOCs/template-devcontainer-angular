{
  "name": "Spring Boot DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/maven-sdkman": {}
  },
  "postCreateCommand": "apt-get update && apt-get install -y maven && mvn -q -ntp dependency:go-offline",
  "forwardPorts": [8080],
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot",
        "pivotal.vscode-spring-boot-dev-pack"
      ]
    }
  }
}

